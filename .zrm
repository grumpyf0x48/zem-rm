# Safer mode using -i
zrm_interactive_mode="always"

# Safe mode using -I
# zrm_interactive_mode="once"

# echo command
zrm_echo=true

zrm_echodo() {
    if [ -n "$zrm_echo" ]; then
        printf "Starting command: %s" "$1"
        for arg in "${@:2}"; do
            printf " '%s'" "$arg"
        done
        printf "\n"
    fi
    "$@"
}

declare -a zrm_safe_args

zrm_get_safe_args() {
    zrm_safe_args=()

    while [ -n "$1" ] && [ '-' = "${1:0:1}" ] && [ '--' != "$1" ]; do
        zrm_safe_args+=("$1")
        shift
    done

    zrm_safe_args+=("--interactive=$zrm_interactive_mode")

    while [ -n "$1" ]; do
        zrm_safe_args+=("$1")
        shift
    done
}

zrm_rm() {
    if [ -z "$zrm_interactive_mode" ]; then
        zrm_interactive_mode="always"
    fi

    zrm_get_safe_args "$@"
    zrm_echodo /bin/rm "${zrm_safe_args[@]}"
}

alias rm='zrm_rm'
